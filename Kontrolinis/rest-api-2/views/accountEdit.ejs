<%- include('partials/header'); -%> <%- include('partials/navBar'); -%>

<h2>Redaguoti sąskaitą</h2>

<form class="editForma" action="/accountEdit/<%= account._id %>" method="POST">
  <div class="form-group">
    <label for="name">Vardas:</label>
    <input type="text" id="name" name="name" value="<%= account.name %>" required />
  </div>

  <div class="form-group">
    <label for="surname">Pavardė:</label>
    <input type="text" id="surname" name="surname" value="<%= account.surname %>" required />
  </div>

  <div class="form-group">
    <label for="accountNr">Sąskaitos Nr:</label>
    <input type="text" id="accountNr" name="accountNr" value="<%= account.accountNr %>" readonly required />
  </div>

  <div class="form-group">
    <label for="bank">Bankas:</label>
    <select id="bank" name="bank" required>
      <option value="Swedbank" <%= account.bank === 'Swedbank' ? 'selected' : '' %>>Swedbank</option>
      <option value="SEB" <%= account.bank === 'SEB' ? 'selected' : '' %>>SEB</option>
      <option value="Citadele" <%= account.bank === 'Citadele' ? 'selected' : '' %>>Citadele</option>
    </select>
  </div>

  <div class="form-group">
    <label for="balance">Balansas:</label>
    <input type="number" id="balance" name="balance" step="any" value="<%= account.balance %>" required />
  </div>

  <div class="form-group">
    <label for="currency">Valiuta:</label>
    <select id="currency" name="currency" required>
      <option value="EUR" <%= account.currency === 'EUR' ? 'selected' : '' %>>EUR</option>
      <option value="USD" <%= account.currency === 'USD' ? 'selected' : '' %>>USD</option>
      <option value="GBP" <%= account.currency === 'GBP' ? 'selected' : '' %>>GBP</option>
    </select>
  </div>

  <button type="submit">Išsaugoti pakeitimus</button>
</form>
<%- include('partials/footer'); -%>
